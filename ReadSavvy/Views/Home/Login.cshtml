@model User
<partial></partial>
<div class="text-center">
    <form class="form-signin" method="post">
        <img src="~/images/images.png" width="100" height="100">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
        <input asp-for="FullName" value="FullName" hidden />
        <label asp-for="Email">Email address</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required autofocus>
        <label asp-for="Password" class="sr-only">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>

        <button  asp-controller="Home" asp-action="Login" class="btn btn-lg btn-primary btn-block mb-2" type="submit"  >Log in</button>


    </form>
    <p>Click <a asp-controller="Home" asp-action="Register">here</a> to register</p>
</div>
